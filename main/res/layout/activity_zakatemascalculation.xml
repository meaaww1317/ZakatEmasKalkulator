<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0d1b2a"
    tools:context=".zakatemascalculation">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:id="@+id/tickimage"
        android:layout_marginTop="20dp"
        android:layout_above="@id/hasillayout"
        android:layout_below="@id/toolbar"
        android:layout_marginBottom="20dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/tick">

    </ImageView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:id="@+id/hasillayout"
        android:background="@drawable/cardbackground"
        android:layout_centerInParent="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:textColor="#778da9"
            android:text="Jenis emas"
            android:id="@+id/jenisemas">

        </TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/jumlahnilai"
            android:layout_marginStart="160dp"
            android:text="Pakai"
            android:textColor="#778da9"
            android:textSize="17sp"
            android:id="@+id/jjenisemas">

        </TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nilai uruf"
            android:layout_marginTop="15dp"
            android:textSize="17sp"
            android:layout_below="@id/jenisemas"
            android:id="@+id/uruf"
            android:textColor="#778da9">

        </TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/uruf"
            android:layout_marginStart="230dp"
            android:layout_marginTop="15dp"
            android:layout_below="@id/jenisemas"
            android:text="g"
            android:textColor="#778da9"
            android:textSize="17sp"
            android:id="@+id/guruf">

        </TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jumlah nilai emas"
            android:layout_marginTop="15dp"
            android:textSize="17sp"
            android:layout_below="@id/uruf"
            android:id="@+id/jumlahnilai"
            android:textColor="#778da9">

        </TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/jumlahnilai"
            android:layout_marginStart="160dp"
            android:layout_marginTop="15dp"
            android:layout_below="@id/guruf"
            android:text="RM"
            android:textColor="#778da9"
            android:textSize="17sp"
            android:id="@+id/rmjumlahnilai">

        </TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jumlah nilai emas wajib dibayar zakat"
            android:layout_marginTop="15dp"
            android:textSize="17sp"
            android:layout_below="@id/jumlahnilai"
            android:id="@+id/emaszakat"
            android:textColor="#778da9">

        </TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/emaszakat"
            android:layout_marginStart="10dp"
            android:layout_marginTop="15dp"
            android:layout_below="@id/jumlahnilai"
            android:text="RM"
            android:textColor="#778da9"
            android:textSize="17sp"
            android:id="@+id/rmemaszakat">

        </TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jumlah zakat"
            android:textColor="#e0e1dd"
            android:layout_marginTop="15dp"
            android:layout_below="@id/emaszakat"
            android:textSize="25sp"
            android:textStyle="bold"
            android:id="@+id/jumlahzakat">

        </TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/jumlahzakat"
            android:layout_marginStart="150dp"
            android:layout_marginTop="15dp"
            android:layout_below="@id/emaszakat"
            android:text="RM"
            android:textColor="#e0e1dd"
            android:textSize="25sp"
            android:id="@+id/rmjumlahzakat">

        </TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Emas anda wajib dibayar zakat"
            android:textColor="#e0e1dd"
            android:layout_marginTop="15dp"
            android:layout_below="@id/jumlahzakat"
            android:textSize="20sp"
            android:layout_centerHorizontal="true"
            android:textStyle="bold"
            android:id="@+id/mssg">

        </TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#e0e1dd"
            android:layout_marginTop="15dp"
            android:layout_below="@id/mssg"
            android:textSize="18sp"
            android:layout_centerHorizontal="true"
            android:id="@+id/mssg2">

        </TextView>

    </RelativeLayout>

    <android.widget.Button
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/recalczakat"
        android:textSize="15sp"
        android:layout_below="@id/hasillayout"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="15dp"
        android:text="Kira Semula Nilai Zakat Emas"
        android:textColor="@color/white"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/buttonbg"
        android:textStyle="bold" />

    
</RelativeLayout>